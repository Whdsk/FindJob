<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lichengnan">

    <application
        android:name=".application.EyepetizerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Eyepetizer">
        <activity
            android:name=".ui.activity.SplashActivity"
            android:theme="@style/Eyepetizer.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".ui.activity.IndexActivity"/>

        <!-- 关于全面屏与刘海，状态栏配置相关 -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.4" />
        <meta-data
            android:name="android.notch_support"
            android:value="true" />
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />

        <activity android:name=".WebViewActivity" />

        <activity android:name=".ui.activity.KaiyuanActivity" />

        <activity android:name="com.eyepetizer.android.ui.setting.AboutActivity" />

        <activity android:name=".ui.activity.UgcDetailActivity" />
        <activity android:name=".ui.activity.login.LoginActivity" />
        <activity android:name=".ui.activity.NewDetailActivity" />
        <activity android:name=".ui.activity.PdfReaderActivity" />
        <activity android:name=".ui.activity.LinearLayoutGroupActivity" />
        <activity android:name=".ui.activity.SkidRightActivity_2" />
        <activity android:name=".ui.activity.ViewPagerLayoutManagerActivity" />

    </application>

</manifest>